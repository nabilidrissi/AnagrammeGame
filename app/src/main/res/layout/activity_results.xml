<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nabilAnagramme.anagram.ResultsActivity"
    android:background="@drawable/backgroun"
    android:gravity="center">

    <TextView
        android:id="@+id/resultsTitleTextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
       android:gravity="center"
        android:text="FÃ©lecitations!"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/resultsTextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultsTitleTextView"
       android:gravity="center"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#ffff"
        android:textSize="30dp" />


    <Button
        android:id="@+id/returnmenuButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/resultsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/coustom_button"
        android:gravity="center"
        android:text="Retour au menu"
        android:textSize="30dp" />







</RelativeLayout>
