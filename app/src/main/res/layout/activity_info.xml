<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.ailyan.anagram.InfoActivity"
    android:background="@drawable/backgroun">



    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="ΟΔΗΓΙΕΣ"
        android:textColor="#ffff"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/infotextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Επέλεξε το επίπεδο δυσκολίας που θές Κάνε κλίκ πάνω στα γράμματα με την σωστή σειρά ώστε να βρείς την ανακατεμμένη λέξη."
        android:layout_below="@id/infoTextView"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/developerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/infotextTextView"
        android:layout_marginTop="60dp"
        android:text="ΑΝΑΠΤΥΧΘΗΚΕ ΑΠΟ:"
        android:textColor="#ffff"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/developernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/developerTextView"
        android:layout_marginTop="15dp"
        android:text="Κουρίας Τριαντάφυλλος-Δημήτριος"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff"
        android:textSize="18dp"
        />


</RelativeLayout>
