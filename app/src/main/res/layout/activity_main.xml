<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.ailyan.anagram.MainActivity"
    android:background="@drawable/backgroun">

    <TextView
        android:id="@+id/gametitle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:text="Choisissez le nombre de caractÃ¨res"
        android:textColor="#ffffff"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/four"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/gametitle"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/four"

        app:layout_constraintEnd_toStartOf="@+id/five"
        app:layout_constraintStart_toStartOf="@+id/gametitle"
        app:layout_constraintTop_toBottomOf="@+id/gametitle"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/five"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/gametitle"
        android:layout_alignParentRight="true"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/five"
        app:layout_constraintEnd_toEndOf="@+id/gametitle"

        app:layout_constraintStart_toEndOf="@+id/four"
        app:layout_constraintTop_toBottomOf="@+id/gametitle"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/six"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/four"
        android:layout_marginStart="100dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/numero6"
        app:layout_constraintEnd_toStartOf="@+id/five"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toEndOf="@+id/four"
        app:layout_constraintTop_toBottomOf="@+id/five"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
