<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_easy"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    tools:context="com.ailyan.anagram.GameActivity"
    android:background="@drawable/backgroun">

    <ImageView
        android:id="@+id/retour"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:src="@drawable/retour"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"

        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:paddingLeft="180dp"
        android:text="Trouvez le bon mot"
        android:textColor="#ffffff"
        android:textSize="100dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="14dp" />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/solution"
        android:id="@+id/affichersolution"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/first_letter_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@drawable/btn1"
        android:gravity="center"
        android:textSize="80dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/second_letter_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@drawable/btn1"
        android:gravity="center"
        android:textSize="80dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/first_letter_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/third_letter_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@drawable/btn1"
        android:gravity="center"
        android:textSize="80dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/second_letter_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/fourth_letter_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@drawable/btn1"
        android:gravity="center"
        android:textSize="80dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/third_letter_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/fifth_letter_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@drawable/btn1"
        android:gravity="center"
        android:textSize="80dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/fourth_letter_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/sixth_letter_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@drawable/btn1"
        android:gravity="center"
        android:textSize="80dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/fifth_letter_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/fourth_letter_btn"
        tools:layout_editor_absoluteX="-20dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/first_letter_answer_tv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/tv2"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="80dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/second_letter_answer_tv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/tv2"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="80dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/first_letter_answer_tv"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/third_letter_answer_tv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/tv2"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="80dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/second_letter_answer_tv"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/fourth_letter_answer_tv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/tv2"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="80dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/third_letter_answer_tv"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/fifth_letter_answer_tv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/tv2"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="80dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/fourth_letter_answer_tv"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/sixth_letter_answer_tv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/tv2"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="80dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/fifth_letter_answer_tv"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/third_letter_answer_tv"
        tools:layout_editor_absoluteX="234dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/coustom_button"
        android:text="Annuler"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skipButton"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />



    <Button
        android:id="@+id/skipButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="190dp"
        android:background="@drawable/coustom_button"
        android:text="Mot Suivant"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />-->

</androidx.constraintlayout.widget.ConstraintLayout>
