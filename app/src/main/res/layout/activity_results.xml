<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ailyan.anagram.ResultsActivity"
    android:background="@drawable/backgroun">

    <TextView
        android:id="@+id/resultsTitleTextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"

        android:text="FÃ©lecitations!"
        android:textColor="#ffff"
        android:textSize="60dp"
        />

    <TextView
        android:id="@+id/resultsTextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultsTitleTextView"
        android:layout_alignStart="@+id/resultsTitleTextView"
        android:layout_alignEnd="@+id/resultsTitleTextView"
        android:layout_centerHorizontal="true"

        android:textColor="#ffff"
        android:textSize="30dp"
        android:layout_marginTop="40dp"/>


    <Button
        android:id="@+id/returnmenuButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/resultsTextView"
        android:layout_alignStart="@+id/resultsTextView"
        android:layout_alignEnd="@+id/resultsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Retour au menu"
        android:background="@drawable/coustom_button"
        android:textSize="18dp" />







</RelativeLayout>
